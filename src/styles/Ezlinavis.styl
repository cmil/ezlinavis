.ezlinavis-component
  display: flex
  flex-direction: column
  flex: 1

.examples
  padding: 10px 20px
  ul
    list-style-type: none
    padding: 0
    margin: 0
    display: inline-block
    li
      display: inline-block
      border: 1px solid gray
      border-radius: 20px
      padding: 4px 10px
      margin-right: 5px
      max-width: 300px
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
      cursor: pointer
      color: white
      background-color: #999
      &:hover
        background-color: #777
      &.active
        background-color: #555
        cursor: default

.ezlinavis-columns
  border-top: 1px solid gray
  display: flex
  align-items: stretch
  flex: 1

color-invalid = #f66

.listinput-component
  flex: 1
  position: relative

  // input validation indicator
  & > div
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    border-left: 8px solid color-invalid
    &.valid
      border-left-color: lightgreen

  textarea
    padding: 10px
    border: none
    outline: none
    box-sizing: border-box
    width: 100%
    height: 100%

.csv-component
  flex: 1
  display: flex
  flex-direction: column
  border-left: 1px solid grey
  padding: 10px
  pre
    overflow: scroll

.graph
  flex: 3
  display: flex
  flex-direction: column
  border-left: 1px solid grey
  padding: 5px
