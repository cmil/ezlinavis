.ezlinavis-component
  border-top: 1px solid gray
  display: flex
  align-items: stretch
  flex: 1

color-invalid = #f66

.listinput-component
  flex: 1

  // input validation indicator
  & > div
    height: 100%
    border-left: 8px solid color-invalid
    &.valid
      border-left-color: lightgreen

  textarea
    padding: 10px
    border: none
    outline: none
    box-sizing: border-box
    width: 100%
    height: 100%

.csv-component
  flex: 1
  display: flex
  flex-direction: column
  border-left: 1px solid grey
  padding: 10px
  pre
    overflow: scroll

.graph
  flex: 3
  display: flex
  flex-direction: column
  border-left: 1px solid grey
